{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "spacing": "none",
      "items": [
        {
          "type": "TextBlock",
          "text": "%Widget_Template_Button/SignIn%",
          "wrap": true,
          "horizontalAlignment": "center",
          "height": "stretch",
          "size": "medium",
          "weight": "bolder"
        },
        {
          "type": "ActionSet",
          "actions": [
            {
              "type": "Action.Submit",
              "title": "%Widget_Template_Button/SignIn%",
              "tooltip": "%Widget_Template_Tooltip/SignIn%"
            }
          ]
        }
      ]
    }
  ]
}