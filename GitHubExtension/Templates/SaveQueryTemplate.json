{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Search",
      "horizontalAlignment": "Center",
      "wrap": true,
      "style": "heading",
      "id": "SearchTitle"
    },
    {
      "type": "TextBlock",
      "text": "Options",
      "id": "advancedOptions"
    },
    {
      "type": "Input.Text",
      "label": "Owner",
      "id": "owner",
      "placeholder": "github, microsoft"
    },
    {
      "type": "Input.Text",
      "label": "Repository",
      "id": "repository",
      "placeholder": "microsoft/terminal"
    },
    {
      "type": "Input.Text",
      "label": "Date created",
      "id": "dateCreated",
      "placeholder": "YYYY-MM-DD"
    },
    {
      "type": "Input.Text",
      "label": "Language",
      "id": "language",
      "placeholder": "C#, Java"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "StateSelectVal",
      "label": "State",
      "value": "1",
      "choices": [
        {
          "$data": "${Survey.questions[0].items}",
          "title": "${choice}",
          "value": "${value}"
        }
      ]
    },
    {
      "type": "Input.ChoiceSet",
      "id": "ReasonSelectVal",
      "label": "Reason",
      "value": "1",
      "choices": [
        {
          "$data": "${Survey.questions[1].items}",
          "title": "${choice}",
          "value": "${value}"
        }
      ]
    },
    {
      "type": "Input.Text",
      "label": "Number of comments",
      "id": "issueNumComments",
      "placeholder": "1...50, >400"
    },
    {
      "type": "Input.Text",
      "label": "Labels",
      "id": "issueLabels",
      "placeholder": "bug, help-wanted"
    },
    {
      "type": "Input.Text",
      "label": "Author",
      "id": "issueAuthor",
      "placeholder": "Enter author login here"
    },
    {
      "type": "Input.Text",
      "label": "Mentioned users",
      "id": "issueMentionedUsers",
      "placeholder": "Enter mentioned users here"
    },
    {
      "type": "Input.Text",
      "label": "Assignees",
      "id": "issueAssignees",
      "placeholder": "microsoft"
    },
    {
      "type": "Input.Text",
      "label": "Updated before date",
      "id": "updatedBeforeDate",
      "placeholder": "YYYY-MM-DD"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
      "data": {
        "id": "1234567890"
      }
    }
  ]
}