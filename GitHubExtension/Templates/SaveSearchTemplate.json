{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "{{SaveSearchFormTitle}}",
      "horizontalAlignment": "Center",
      "wrap": true,
      "style": "heading"
    },
    {
      "type": "Input.Text",
      "id": "Name",
      "label": "Name",
      "isRequired": true,
      "errorMessage": "Name is required",
      "value": "{{SavedSearchName}}"
    },
    {
      "type": "Input.Text",
      "id": "EnteredSearch",
      "label": "Search",
      "isRequired": true,
      "errorMessage": "Search is required",
      "value": "{{SavedSearchString}}"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Save",
      "data": {
        "id": "SaveSearchAction"
      }
    }
  ]
}