{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": {{SaveSearchFormTitle}},
      "horizontalAlignment": "Center",
      "wrap": true,
      "style": "heading"
    },
    {
      "type": "Input.Text",
      "id": "Name",
      "label": {{NameLabel}},
      "placeholder": {{NamePlaceholder}},
      "isRequired": false,
      "value": {{SavedSearchName}}
    },
    {
      "type": "Input.Text",
      "id": "EnteredSearch",
      "label": {{EnteredSearchLabel}},
      "placeholder": {{EnteredSearchPlaceholder}},
      "isRequired": true,
      "errorMessage": {{EnteredSearchErrorMessage}},
      "value": {{SavedSearchString}}
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "Input.Toggle",
              "id": "IsTopLevel",
              "title": {{IsTopLevelTitle}},
              "valueOn": "true",
              "valueOff": "false",
              "value": {{IsTopLevel}}
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": {{SaveSearchActionTitle}},
      "data": {
        "id": "SaveSearchAction"
      }
    }
  ]
}